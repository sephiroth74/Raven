package com.aviary.graphics
{
	/**
	 * Define a generic object which accept fill and stroke
	 * properties to be used when it has to be drawn
	 */
	public interface IDrawable
	{
	    function get interpolationMethod(): String;
	    function set interpolationMethod( value: String ): void;
	    function get spreadMethod(): String;
	    function set spreadMethod( value: String ): void;
	    function set focalPointRatio( value: Number ): void;
	    function get focalPointRatio(): Number;
	    function get strokeType(): uint;
	    function set strokeType( t: uint ): void;
	    function get fillType(): uint;
	    function set fillType( t: uint ): void;
	    function get fillRotation(): Number;
	    function set fillRotation( value: Number ): void;
	    function get fillAngle(): Number;
	    function set fillAngle( value: Number ): void;
	    function set fill( value: IVectorFill ): void;
	    function get fill(): IVectorFill;
	    function set stroke(value:IVectorStroke ): void;
	    function get stroke(): IVectorStroke;
	}
}